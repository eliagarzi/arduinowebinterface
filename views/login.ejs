<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Arduino Login</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/login-styles.css">
    </head>
    <body>

        <div class="login-header">
            <p>Arduino Dashboard</p>
        </div>

        <div class="login-menu">

            <form class="login-form form-displayblock" method="POST" action="/login" style="display: block;">
                
                <div class="form-element form-header">
                    <h1>Login</h1>
                </div>

                <div class="form-element form-element__email">
                    <label class="form-element__label">E-Mail</label>
                    <input name="username" class="form-element__input form-element__input--username" type="text">
                </div>
                
                <div class="form-element form-element__password">
                    <label class="form-element__label">Password</label>
                    <input name="password" class="form-element__input form-element__input--password" type="password">
                </div>

                <!--

                    <% if(message != undefined) { %> 
                        <div class="form-element form-element-message">
                            <p><% if(message != undefined) { %>
                                <%= message %> 
                                <% } %>
                            </p> 
                        </div>
                        <% } %> 

                -->
                
                <div class="form-element form-element-submit">
                    <button type="submit" class="form-element__submit-button form-button">Login</button>
                </div>

                <div class="form-element">
                    <button type="button" class="form-element__reset-password">Passwort vergessen</button>
                </div>

            </form>

            <form class="password-reset-form form-displaynone" method="POST" action="/login/reset" style="display: none;">
                
                <div class="form-element form-header">
                    <h1>Passwort vergessen</h1>
                </div>

                <div class="form-element form-element__email">
                    <label class="form-element__label">E-Mail</label>
                    <input name="username" class="form-element__input form-element__input--username" type="text">
                </div>
                
                <div class="form-element form-element-submit">
                    <button type="submit" class="form-element__submit-button form-button">Passwort zur√ºcksetzen</button>
                </div>

                <div class="form-element">
                    <button type="Button" class="form-element__backtologin-button">Login</button>
                </div>
                
            </form>

        </div>
        
        <script src="/script/login.js" async defer></script>
    </body>
</html>